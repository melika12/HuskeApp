<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HuskeApp.Views.editNote">
    <StackLayout>
        <Entry IsVisible="false" x:Name="noteId"></Entry>
        <Entry x:Name="name" Placeholder="name of note" HorizontalTextAlignment="Center" FontSize="24"></Entry>
        <Entry x:Name="description" Placeholder="description of note" HorizontalTextAlignment="Center" FontSize="24"></Entry>
        <Button Text="Save changes" Clicked="Button_Clicked"></Button>
    </StackLayout>
</ContentPage>